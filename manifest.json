{
  "name": "localhost2ip",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Automatically redirect http://localhost to your internal IP",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://github.com/navhu/localhost2ip",
  "offline_enabled": true,
  "browser_action": {
    "default_title": "localhost2ip",
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": [
        "inject.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": []
}
